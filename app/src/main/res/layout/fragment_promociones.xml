    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danni.firebasetabs.TabsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="promociones"/>

        <Button
            android:id="@+id/bPromociones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promociones" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tPromociones"/>
    </LinearLayout>

</FrameLayout>
